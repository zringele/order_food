{% extends 'base.html.twig' %}
    {% block body %}
    <div class="container">
    <h2>Jūsų šios dienos užsakymas</h2>
    <table class="table table-dark">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Patiekalas</th>
            <th scope="col">Garnyrai</th>
            <th scope="col">Kaina</th>
            </tr>
        </thead>
        <tbody>
            {% for key, dish in order %}

                <tr>
                <th scope="row">{{ key+1 }}</th>
                <td>{{ dish['dish_title'] }}</td> 
                <td>{{ dish['side_titles'] }}</td>
                <td>{{ dish['dish_price'] }}</td>
                </tr>
            {% endfor %}
        
        </tbody>
    </table>
    </div>
{% endblock %}